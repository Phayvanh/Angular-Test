/********************* garbage collector ****************/

var obj = {
    inobj:{st:"youhou"}
};

console.log(obj);

var obj2 = obj;
obj = 2;

console.log(obj);

var outobj = obj2.inobj;

console.log(outobj);

obj2 = "hello";

console.log(obj2);

outobj = 3;

console.log(outobj);


function test(number)
{
    if(number === 1) var local = 2;

    console.log(local);
}

test(2);//tout est effacé
test(1);//local = 2


var myVar = (function()
{
    var myPrivateProperty = 2;
    var myPublicProperty = 88;

    return{// on ne retourne que myPublicProperty, on ne peut pas accéder à la variable myPrivateProperty
        myPublicProperty: myPublicProperty
    };
})();

console.log(myVar);

/************ Module Patern *********************/

var mathModule = (function(baseNumber)
{
    function plus(aNumber)
    {
        return baseNumber + aNumber;
    }

    function minus(aNumber)
    {
        return baseNumber - aNumber;
    }

    function times(aNumber)
    {
        return baseNumber * aNumber;
    }

    function over(aNumber)
    {
        return baseNumber / aNumber;
    }

    return {
        plus: plus,
        minus: minus,
        times: times,
        over: over
    };
})(10);

console.log(mathModule.plus(2));
console.log(mathModule.over(5));




















